<h5>Update: <%= @practice.lesson.exercise %></h5>



<ul style="list-style-type:none">
<form action = "/lessons/<%=current_user.id%>/edit/<%=@practice.id%>" method = "post">
<input type = "hidden" name ="_method" value = "patch">
