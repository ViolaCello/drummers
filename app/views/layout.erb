<% if logged_in? %>
<center><h5>Logged in as: <%= current_user.username  %></h5></center>
<% end %>
 <table border="5" width="100%" 
           align="center">

<tr bgcolor="lightblue">
<% if logged_in? %>
<td><form action="/profile/<%=current_user.id%>">
    <input type="submit" value="My Profile" <button style="background-color:black; border-color:gray; color:white">
</form></td>
<td>
<form action="/practice/<%=current_user.id%>">
    <input type="submit" value="Log Practice Session" <button style="background-color:black; border-color:gray; color:white">
</form>
</td>

<% end %>
<% if !logged_in? %>
<td>

<form action="/join">
    <input type="submit" value="Create Account" <button style="background-color:black; border-color:gray; color:white">
</form>


</td>
<td>
<form action="/login">
    <input type="submit" value="Log In" <button style="background-color:black; border-color:gray; color:white">
</form>
</td>
<% end %>


<td>

<form action="/leaders">
    <input type="submit" value="Leader Board" <button style="background-color:black; border-color:gray; color:white">
</form>

</td>


<td>

<form action="/community">
    <input type="submit" value="Community Page" <button style="background-color:black; border-color:gray; color:white">
</form>


</td>

<% if logged_in? %>
<td>

<form action="/logout">
    <input type="submit" value="Log Out" <button style="background-color:black; border-color:gray; color:white">
</form>




<% end %>
</tr>
</table>


